{
  "manifest_version": 3,
  "name": "Anti-spam",
  "description": "Say goodbye to spam",
  "version": "0.1",
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "64": "img/icon64.png"
    }
  },

  "background": {
    "service_worker": "background.js"
  },

  "permissions": ["webNavigation", "tabs"],

  "icons": {
    "64": "img/icon64.png"
  }
}
