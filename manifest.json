{
  "manifest_version": 3,
  "name": "Anti-spam",
  "description": "Say goodbye to spam",
  "version": "0.1",
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "64": "img/icon64.png"
    }
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["script.js"]
    }
  ],
  "permissions": ["webNavigation", "tabs", "activeTab"],

  "icons": {
    "64": "img/icon64.png"
  }
}
